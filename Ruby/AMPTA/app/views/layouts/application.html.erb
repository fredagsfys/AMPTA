<!DOCTYPE html>
<html>
<head>
  <title>AMPTA</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
	<body>

<% if current_user %>
<div class="container-fluid">
	<nav class="clearfix">
		<div id="LeftNav">
		  	<%= link_to "Startpage", projects_path %>
		  		<%= link_to "All projects", all_projects_path %>
		  <%= link_to "Create project", new_project_path %>
		</div>
		<div id="RightNav">
		  	<% if current_user %>
		    	Logged in as <%= current_user.first_name %>.
		    	<%= link_to "Log out", log_out_path %>
		  	<% end %>
		</div>
	</nav>

	<div class="row-fluid">
	    <div class="span2">
	      	<h6>Your projects</h6>
	      	<!-- Check if there are any projects for the online user -->
      		<% if user_projects.size > 0 %>
      			<table>
      				<tr>

  					<!-- Loop out the online users projects -->
		      		<% user_projects.each do |u| %>
					<td class="projectCell">
	            		<%= link_to u.name, project_path(u.id) %>
					</td>
		      		<% if u.user_id == current_user.id %>
		      			<td>
							<span class="yourProject"><i class="icon-ok-sign"></i>Admin</span>
						</td>
		      		<% else %>
		      			<td></td>
		      		<% end %>
        		<% end %>

        			</tr>
				</table>
			<% else %>
				<p class="muted">You have no projects.</p>
			<% end %>

      		<br />
	      	<h6>Your last 10 tickets</h6>

	      	<!-- Loop out the online users tickets if there is any -->
	      	<% if user_projects.size > 0 %>
	      		<% user_tickets.each do |u| %>
					<p>
	            		<%= link_to u.name, ticket_path(u.id) %> <!-- <span class="muted">(<%= @project.name %>)</span> -->
					</p>
        		<% end %>
			<% else %>
				<p class="muted">You have no tickets.</p>
			<% end %>
	    </div>
	    <div class="span10">
	      	<%= yield %>
	    </div>
	</div>
</div>
<% else %>
	<%= yield %>
<% end %>
</body>
</html>
